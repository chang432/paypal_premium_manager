# Runtime config
ENVIRONMENT=prod
LOG_LEVEL=INFO
API_PREFIX=/v1

# Redis
REDIS_URL=redis://redis:6379/0
REDIS_TTL_SECONDS=3600

# AWS
AWS_REGION=us-east-1
DYNAMODB_TABLE=kofi_premium_users
AWS_PROFILE=default
AWS_SDK_LOAD_CONFIG=1

# Uvicorn / TLS
UVICORN_WORKERS=2
# Set ENABLE_TLS=1 to serve HTTPS on 8443; mount certs in ./certs (cert.pem, key.pem) or override paths
ENABLE_TLS=
SSL_CERTFILE=/certs/cert.pem
SSL_KEYFILE=/certs/key.pem

# PayPal
PAYPAL_CLIENT_ID=
PAYPAL_CLIENT_SECRET=
# Sandbox default (api-m.sandbox.paypal.com); for live use https://api-m.paypal.com
PAYPAL_BASE_URL=https://api-m.sandbox.paypal.com
PAYPAL_TZ_OFFSET=+0000
